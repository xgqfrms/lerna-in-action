{
    "root": true,
    "plugins": [
        "html",
        "standard",
        "promise"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "eqeqeq": ["warn", "allow-null"],
        "semi": ["error", "always"],
        "no-inline-comments": "error",
        "one-var": "off",
        "space-before-function-paren": ["error", "always"],
        "comma-dangle": "off"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "__DEV__": true,
        "localStorage": true,
        "sessionStorage": true
    }
}
